<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Post.Mostrar_Post_Activity">

    <!-- Agregar la Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_apm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Resto de tu diseño aquí -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_editText_puestoTrabajo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/cuadro_editext"
                    android:drawableLeft="@drawable/ico_perfil"
                    android:drawablePadding="8dp"
                    android:hint="Puesto"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/m_editText_noVacantes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/cuadro_editext"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="No. Vacantes"
                    android:inputType="none"
                    android:padding="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Ubicación"/>

            <TextView
                android:id="@+id/m_editText_locacion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cuadro_editext"
                android:drawableLeft="@drawable/ico_locacion"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="20dp"
                   android:layout_marginTop="20dp"
                   android:text="Fecha de entrevista"/>

                <TextView
                    android:id="@+id/m_editText_diaPublicacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/cuadro_editext"
                    android:drawableLeft="@drawable/ic_historial"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:tint="@color/lavanda" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Fecha de final de publicación"/>

                <TextView
                    android:id="@+id/m_editText_diaLimite"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/cuadro_editext"
                    android:drawableLeft="@drawable/ic_historial"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:tint="@color/lavanda" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Horario laboral"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_editText_horario"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cuadro_editext"
                    android:drawableLeft="@drawable/ic_historial"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:tint="@color/lavanda" />

                <TextView
                    android:id="@+id/m_editText_horario2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cuadro_editext"
                    android:drawableLeft="@drawable/ic_historial"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:tint="@color/lavanda"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Salario"/>

            <TextView
                android:id="@+id/m_editText_salario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cuadro_editext"
                android:drawableLeft="@drawable/ico_money"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Funciones"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/m_editText_funciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cuadro_editext"
                    android:drawablePadding="8dp"
                    android:gravity="top"

                    android:padding="8dp"
                    android:textColor="@color/black" />

            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Requisitos"/>


                <TextView
                    android:id="@+id/m_editText_requisitos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cuadro_editext"
                    android:drawablePadding="8dp"
                    android:gravity="top"

                    android:padding="8dp"
                    android:textColor="@color/black" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>