<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="50dp"
    android:layout_marginHorizontal="6dp"
    tools:context=".Herramientas.Calculadora.CalculadoraFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_proceso"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:textSize="40sp"
            android:gravity="end|center"
            android:elevation="8dp"
            android:maxLines="1"

            android:scrollbars="vertical" />



        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:textSize="30sp"
            android:gravity="end|center"
            android:shadowColor="#000000"
            android:elevation="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_historial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:paddingEnd="30sp"
                android:drawableEnd="@drawable/ic_historial"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn_convertidor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:paddingEnd="30sp"
                android:drawableEnd="@drawable/ic_conversion"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn_rotar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:paddingEnd="35sp"
                android:drawableEnd="@drawable/ic_rotar"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn_borrar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:paddingEnd="35sp"
                android:drawableEnd="@drawable/ic_eliminar"
                app:cornerRadius="100dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_limpiar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="C"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />
            <Button
                android:id="@+id/btn_parentesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="()"
                android:textColor="@color/lavanda"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />
            <Button
                android:id="@+id/btn_porcentaje"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="%"
                android:textColor="@color/lavanda"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />
            <Button
                android:id="@+id/btn_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="/"
                android:textColor="@color/lavanda"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_siete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_ocho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_nueve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_multiplicacion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="*"
                android:textColor="@color/lavanda"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cuatro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_cicno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_seis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_restar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="-"
                android:textColor="@color/lavanda"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_uno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_dos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_tres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_suma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="+"
                android:textColor="@color/lavanda"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_masMenos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_cero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_punto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:baselineAligned="false"
                android:text="."
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_igual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/lavanda"
                android:baselineAligned="false"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cornerRadius="100dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>